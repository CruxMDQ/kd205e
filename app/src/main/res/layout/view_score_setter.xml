<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/panelContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imgAttributeIcon"
            style="@style/AttributeIcon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/icons8_strength" />

        <TextView
            android:id="@+id/txtBaseScore"
            style="@style/AttributeText"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textAlignment="center"
            tools:text="15" />

        <CheckBox
            android:id="@+id/chkSelectStat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/txtPlus"
            style="@style/AttributeText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="+"
            android:textAlignment="center"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/txtBonus"
            style="@style/AttributeText"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textAlignment="center"
            android:textColor="@color/my_green"
            tools:text="2" />

        <TextView
            android:id="@+id/txtEquals"
            style="@style/AttributeText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="="
            android:textAlignment="center"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/txtFinalScore"
            style="@style/AttributeText"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textAlignment="center"
            tools:text="17" />
    </LinearLayout>
</layout>
